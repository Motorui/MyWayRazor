@page
@model MyWayRazor.Pages.Tabelas.Funcoes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar Registo</h2>

    <h4>Função</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Funcao.FuncaoId" />
                <div class="form-group">
                    <label asp-for="Funcao.FuncaoNome" class="control-label"></label>
                    <input asp-for="Funcao.FuncaoNome" class="form-control" />
                    <span asp-validation-for="Funcao.FuncaoNome" class="text-danger"></span>
                </div>
                <div class="form-group" style="visibility: hidden; display: none;">
                    <label asp-for="Funcao.CreatedAt" class="control-label"></label>
                    <input asp-for="Funcao.CreatedAt" class="form-control" />
                    <span asp-validation-for="Funcao.CreatedAt" class="text-danger"></span>
                </div>
                <div class="form-group" style="visibility: hidden; display: none;">
                    <label asp-for="Funcao.CreatedBy" class="control-label"></label>
                    <input asp-for="Funcao.CreatedBy" class="form-control" />
                    <span asp-validation-for="Funcao.CreatedBy" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="Index">Voltar para a listagem</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }