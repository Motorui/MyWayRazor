@page
@model MyWayRazor.Pages.Tabelas.Categorias.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Categorias</h2>

<p>
    <a asp-page="Create">Criar novo registo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Categoria[0].CategoriaNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria[0].CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria[0].LastUpdatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria[0].LastUpdatedBy)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Categoria) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriaNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdatedBy)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CategoriaId">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.CategoriaId">Detalhes</a> |
                <a asp-page="./Delete" asp-route-id="@item.CategoriaId">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
