@page
@model MyWayRazor.Pages.Upload.UploadFTE
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Upload Escala</h3>
                </div>
                <div class="box-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label>Data:</label>
                            <div class="input-group date col-md-6">
                                <input type="text" class="form-control" name="DataMes"><span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="file" asp-for="Upload" class="col-md-6" />
                        </div>
                        <div class="form-group">
                            <h4 class="text-danger"><span style="white-space: pre-line">@Html.ValidationSummary()</span></h4>
                        </div>
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@if (@ViewBag.Message != null)
{
    <div id="popupdiv" style="border: 1px solid red; display: none;">
        @ViewBag.Message
    </div>
}
@section Scripts
    {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/AdminLTE/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <script>
        $('.input-group.date').datepicker({
            format: "MM-yyyy",
            startView: 1,
            minViewMode: 1,
            maxViewMode: 2,
            language: "pt",
            autoclose: true
        });
    </script>
}
@section Styles {
    <link rel="stylesheet" href="~/AdminLTE/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css">
}